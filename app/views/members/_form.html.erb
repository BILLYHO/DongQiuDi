<%= form_for(@member) do |f| %>
  <% if @member.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@member.errors.count, "error") %> prohibited this member from being saved:</h2>

      <ul>
      <% @member.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <form>
    <div class="row">
    <div class="form-group col-md-6 col-md-offset-3">
      <%= f.label "Member ID" %><br>
      <%= f.text_field :member_id,class:"form-control" %><br>

      <%= f.label :name %><br>
      <%= f.text_field :name,class:"form-control"%><br>

      <%= f.label :gender %><br>
      <%= f.select(:gender, options_for_select([["男", "男"], ["女", "女"], ["其他", "其他"]], 3), {}, {class:"form-control"})%><br>

      <%= f.label :position %><br>
      <%= f.select(:position, options_for_select([["前锋", "前峰"], ["中场", "中场"], ["后卫", "后卫"], ["门将", "门将"], ["后勤", "后勤"], ["退役", "退役"]], 6), {}, {class:"form-control"})%><br>

      <%= f.label :about %><br>
      <%= f.text_area :about,class:"form-control" %><br>

      <%= f.label :motto %><br>
      <%= f.text_area :motto,class:"form-control" %><br>

      <%= f.label :avatar %><br>
      <%= f.url_field :avatar,class:"form-control" %><br>

      <%= f.submit "Submit", class:"btn btn-primary"%>
    </div>
    </div>
  </form>

<% end %>
