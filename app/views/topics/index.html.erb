<h1>Listing topics</h1>


<% if @topics.any? %>
    <div class="col-md-offset-1">
      <h3>Topics (<%= @topics.count %>)</h3>
    </div>

  <div class="row">
    <%= render @topics %>
  </div>
  <%= will_paginate @topics %>
<% end %>

<div class="col-md-offset-1">
  <%= link_to 'New Topic', new_topic_path %>
</div>

