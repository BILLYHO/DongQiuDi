<p id="notice"><%= notice %></p>

<div class="page-header">
  <h1><%= @news.title %></h1>
  <div class="center"><%= @news.time.to_s %></div>
</div>

<div class="row">
<div class="well col-md-10 col-md-offset-1">
  <%= render html: @news.content.gsub(/\n/, '<br>').html_safe %>
</div>
</div>

<div class="row">
  <div class="btn-group col-md-offset-1 col-sm-6 col-sm-offset-0 col-xs-10 col-xs-offset-1">
    <%= link_to 'Back', news_index_path, :class => " btn btn-default"%>
    <%= link_to 'Edit', edit_news_path(@news), :class => " btn btn-default"%>
    <%= link_to 'Destroy', @news, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger", :style => 'color: #FFFFFF'%>
  </div>
</div>

